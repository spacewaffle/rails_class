    tr, td{
      display: block;
    }
    td { 
      /* Behave  like a "row" */
      border: none;
      border-bottom: 1px solid #eee; 
      position: relative;
    }
    thead{
      display: none;
    }
    td:not(:first-child):before{
      content: "";
      height: 55px;
      width: 50px;
      display: inline-block;
      background-size: 50px;
      background-repeat: no-repeat;
      position: absolute;
      margin-left: auto;
      margin-right: auto;
      left: -145px;
      right: 0;
    }
    td{
      height: 60px;
      line-height: 60px;
    }
    td:first-child{
      height: 30px;
      line-height: 30px;
      margin-top: 20px;
    }
    td:nth-child(2):before{
      background-image: url("<%= asset_path 'si.png' %>");
      width: 60px;
      background-size: 60px 42px;
      top: 15px;
    }
    td:nth-child(3):before{
      background-image: url("<%= asset_path 'logo-short.png' %>");
    }
    td:nth-child(4):before{
      background-image: url("<%= asset_path 'ga-sm.jpg' %>");
      left: -143px;
    }
    td:nth-child(5):before{
      background-image: url("<%= asset_path 'launch_academy.png' %>");
      background-size: 60px;
      top: 10px;
      left: -154px;
    }
    td.rails-class{
      border-left: none;
      border-right: none;
    }
    td.rails-class.first{
      border-top: none;
    }
    td.rails-class.last{
      border-bottom: none;
    }
  }
