<h1>Listing apps</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>Name</th>
      <th>Date</th>
      <th>Employment</th>
      <th>Currently</th>
      <th>Looking for</th>
      <th>Experience</th>
      <th>Ideas</th>
      <th>Linkedin</th>
      <th>Heard from</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apps.each do |app| %>
      <tr>
        <td><%= app.email %></td>
        <td><%= app.name %></td>
        <td><%= app.date %></td>
        <td><%= app.employment %></td>
        <td><%= app.currently %></td>
        <td><%= app.looking_for %></td>
        <td><%= app.experience %></td>
        <td><%= app.ideas %></td>
        <td><%= app.linkedin %></td>
        <td><%= app.heard_from %></td>
        <td><%= link_to 'Show', app %></td>
        <td><%= link_to 'Edit', edit_app_path(app) %></td>
        <td><%= link_to 'Destroy', app, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New App', new_app_path %>
